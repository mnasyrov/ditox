{
  "exclude": ["./mod.ts"],
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2019",
    "module": "ES2015",
    "lib": ["ES2019"],
    "jsx": "react-jsx",
    "importHelpers": false,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  }
}
